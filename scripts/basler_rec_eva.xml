<Blobserver>
    <Flow>
        <Source>
            <Type>Source_2D_Shmdata</Type>
            <Subsource>0</Subsource>
            <Param>
                <Name>location</Name>
                <Value>/tmp/switcher_default_video_video-0</Value>
            </Param>
            <Param>
                <Name>scale</Name>
                <Value>0.35</Value>
            </Param>
            <Param>
                <Name>rotation</Name>
                <Value>0.0</Value>
            </Param>
<!--             <Param>
                <Name>gammaCorrection</Name>
                <Value>0.5</Value>
            </Param> -->
        </Source>
        <Actuator>
            <Type>Actuator_Hog</Type>
            <Param>
                <Name>verbose</Name>
                <Value>0</Value>
            </Param>
            <Param>
                <Name>modelFilename</Name>
                <Value>models/model_8x8_bw.xml</Value>
            </Param>
            <Param>
                <Name>maxTimePerFrame</Name>
                <Value>2e5</Value>
            </Param>
            <Param>
                <Name>maxThreads</Name>
                <Value>8</Value>
            </Param>
            <Param>
                <Name>mergeDistance</Name>
                <Value>64</Value>
            </Param>
            <Param>
                <Name>filterSize</Name>
                <Value>1</Value>
            </Param>
            <Param>
                <Name>roiSize</Name>
                <Value>size_64x128</Value>
            </Param>
            <Param>
                <Name>blockSize</Name>
                <Value>size_3x3</Value>
            </Param>
            <Param>
                <Name>cellSize</Name>
                <Value>size_8x8</Value>
            </Param>
<!--             <Param>
                <Name>bins</Name>
                <Value>9</Value>
            </Param> -->
            <Param>
                <Name>margin</Name>
                <Value>0.9</Value>
            </Param>
            <Param>
                <Name>lifetime</Name>
                <Value>30</Value>
            </Param>
            <Param>
                <Name>keepOldBlobs</Name>
                <Value>0 0</Value>
            </Param>

            <Param>
                <Name>processNoiseCov</Name>
                <Value>1e-4</Value>
            </Param>
            <Param>
                <Name>measurementNoiseCov</Name>
                <Value>1e-2</Value>
            </Param>
<!--             <Param>
                <Name>saveSamples</Name>
                <Value>0</Value>
            </Param>
            <Param>
                <Name>saveSamplesAge</Name>
                <Value>120</Value>
            </Param> -->
        </Actuator>
    </Flow>
    <Flow>
        <Source>
            <Type>Source_2D_Shmdata</Type>
            <Subsource>0</Subsource>
<!--            <Param>
                <Name>location</Name>
                <Value>/tmp/blobserver_output_1</Value>
            </Param> -->
        </Source>
        <Actuator>
            <Type>Actuator_Nop</Type>
        </Actuator>
        <Client>
            <Address>192.168.2.24</Address>
            <Port>9000</Port>
        </Client>
        <Server>
            <Address>localhost</Address>
            <Port>9002</Port>
        </Server>
    </Flow>
</Blobserver>
